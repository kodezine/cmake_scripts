{
  "version": 3,
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 22,
    "patch": 0
  },
  "configurePresets": [
    {
      "hidden": true,
      "name": "llvm",
      "environment": {
        "LLVM_CLANG_ROOT_FOLDER": "$env{HOME}/llvm_arm",
        "SEGGER_JLINK_ROOT_FOLDER": "$env{HOME}/jlink_home"
      },
      "cacheVariables": {
        "GITHUB_BRANCH_TOOLCHAIN": "HEAD",
        "CMAKE_TOOLCHAIN_FILE": "${sourceDir}/toolchains/llvm_clang_arm.cmake"
      }
    },
    {
      "hidden": true,
      "name": "mcu_STM32F031x6",
      "environment": {
        "CORTEX_TYPE": "CM0"
      },
      "cacheVariables": {
        "STM32_TYPE": "f0",
        "STM32_DEVICE": "STM32F031x6",
        "GITHUB_BRANCH_stm32cubef0": "1.11.5",
        "JLINK_DEVICE": "STM32F031K6"
      }
    },
    {
      "hidden": true,
      "name": "mcu_STM32F303RE",
      "environment": {
        "CORTEX_TYPE": "CM4F"
      },
      "cacheVariables": {
        "STM32_TYPE": "f3",
        "STM32_DEVICE": "STM32F303xE",
        "GITHUB_BRANCH_stm32cubef3": "1.11.5",
        "JLINK_DEVICE": "STM32F303RE"
      }
    },
    {
      "hidden": true,
      "name": "base",
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/build/${presetName}",
      "cacheVariables": {
        "test_all_frameworks": "true",
        "FETCHCONTENT_UPDATES_DISCONNECTED": "OFF",
        "FETCHCONTENT_QUIET": "true",
        "FETCHCONTENT_BASE_DIR": "${sourceDir}/_deps",
        "CMAKE_INSTALL_PREFIX": "${sourceDir}/install/${presetName}"
      }
    },
    {
      "inherits": [
        "base",
        "llvm",
        "mcu_STM32F031x6"
      ],
      "name": "d-llvm-mcu_STM32F031x6",
      "displayName": "d-llvm-mcu_STM32F031x6",
      "description": "Debug mcu_STM32F031x6 with llvm"
    },
    {
      "inherits": [
        "base",
        "llvm",
        "mcu_STM32F303RE"
      ],
      "name": "d-llvm-mcu_STM32F303RE",
      "displayName": "d-llvm-mcu_STM32F303RE",
      "description": "Debug mcu_STM32F303RE with llvm"
    }
  ],
  "buildPresets": [
    {
      "name": "d-llvm-mcu_STM32F031x6",
      "configurePreset": "d-llvm-mcu_STM32F031x6"
    },
    {
      "name": "d-llvm-mcu_STM32F303RE",
      "configurePreset": "d-llvm-mcu_STM32F303RE"
    }
  ]
}
